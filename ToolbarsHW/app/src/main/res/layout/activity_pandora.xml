<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.todo.toolbarshw.PandoraActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:elevation="0dp"
        android:src="@drawable/pandoraimageview"/>
    <android.support.v7.widget.Toolbar
        android:id="@+id/xmlPandoraActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:elevation="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Club/Dance Radio"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#ffffff"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.Toolbar
        android:id="@+id/xmlPandoraToolBarBottom"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:elevation="4dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/xmlPandoraBottomThumbsDown"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pandorabottomtumbsdown"/>
                <ImageView
                    android:id="@+id/xmlPandoraBottomThumbsUp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pandorabottomthumbsup"/>
                <ImageView
                    android:id="@+id/xmlPandoraBottomPause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pandorabottompause"/>
                <ImageView
                    android:id="@+id/xmlPandoraBottomSkip"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pandorabottomskip"/>
            </LinearLayout>
            <SeekBar
                android:id="@+id/xmlPandoraSeekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="10"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

</RelativeLayout>
