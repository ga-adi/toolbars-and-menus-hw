<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.adi.ho.jackie.toolbarhw.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/top_pocketcasttoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="#ff5d1e">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/altmenu"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:background="@drawable/hamburgericon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Podcasts"
                android:textSize="20dp"
                android:layout_toRightOf="@id/altmenu"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:layout_marginLeft="4dp"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>



    <android.support.v7.widget.Toolbar
        android:id="@+id/bot_pocketcasetoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="#5627ff"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/podcast_play_button"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginLeft="-10dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:background="@android:drawable/ic_media_play"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Infinite Guest Everything Feed"
                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TBTL #1810: Cash Rules Some Thin.."
                    android:textColor="#dedcdc"/>

            </LinearLayout>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/infiniteguest"
                android:layout_gravity="right"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>


</RelativeLayout>