<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brprog.toolbarsandmenushomework.MainActivity">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/top_toolbar"
        android:background="#FF0001">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_call"
            android:background="#ff0001"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Podcasts"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:layout_marginLeft="140dp"/>
    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/bottom_toolbar"
        android:background="#49279f"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/toolbar_pic"
                android:src="@android:drawable/ic_menu_share"
                android:layout_gravity="start"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="70dp"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Infinite Guess Everything Feed"
                        android:textColor="@android:color/white"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TBTL #1810: Cash Rules Some Things..."
                        android:textColor="@android:color/white"/>
            </LinearLayout>
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/infiniteguest"
                android:background="#47259f"
                android:id="@+id/play_button_imagebutton"
                android:layout_marginLeft="50dp"
                />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

</FrameLayout>
